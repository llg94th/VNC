<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    style="@style/TestAnimation"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivNotiThum"
        android:layout_width="@dimen/login_edittext_margin"
        android:layout_height="@dimen/login_edittext_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp">

        <TextView
            android:id="@+id/tvNotiName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên cuộc họp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAlignment="textStart"
            android:textSize="@dimen/textsizeBig"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNotiTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thời gian"
            android:textAlignment="textEnd"
            android:textSize="@dimen/textsizeSmall"
            android:textStyle="italic" />
    </LinearLayout>
</LinearLayout>